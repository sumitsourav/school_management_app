<!-- app/views/schools/new.html.erb -->
<h1>New School</h1>
<%= form_with(model: @school, url: schools_path, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :address %>
  <%= form.text_field :address %>

  <%= form.label :phone %>
  <%= form.text_field :phone %>

  <%= form.label :school_admin_email %>
  <%= form.text_field :email %>

  <%= form.submit %>
<% end %>
<% if @school.errors.any? %>
  <p><%= @school.errors.full_messages.join('\n') %></p>
<% end %>



<%= link_to "Back to Home", authenticated_root_path %>
