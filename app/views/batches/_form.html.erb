<!-- app/views/batches/_form.html.erb -->
<%= form_with(model: batch, url: batch.persisted? ? batch_path(batch) : school_course_batches_path(@course)) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :start_date %>
  <%= form.date_field :start_date %>

  <%= form.label :end_date %>
  <%= form.date_field :end_date %>

  <%= form.submit %>
<% end %>